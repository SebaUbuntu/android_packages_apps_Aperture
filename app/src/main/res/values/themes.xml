<resources>
    <!-- Base application theme. -->
    <style name="Theme.Selfie" parent="Theme.Material3.Dark">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Secondary container -->
        <item name="colorOnSecondaryContainer">@color/white</item>
        <item name="colorSecondaryContainer">#2a3232</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorOnPrimary</item>
        <!-- Customize your theme here. -->
        <item name="dialogCornerRadius">28dp</item>
    </style>

    <!-- Main activity theme. -->
    <style name="Theme.Selfie.Main" parent="Theme.Selfie" />

    <!-- Settings activity theme. -->
    <style name="Theme.Selfie.Settings" parent="Theme.Selfie" />

    <!-- Top bar icons theme -->
    <style name="SelfieTopBarButton">
        <item name="tint">?attr/colorPrimary</item>
        <item name="backgroundTint">?attr/colorOnPrimary</item>
        <item name="android:padding">0dp</item>
    </style>

    <!-- Shutter button theme -->
    <style name="SelfieShutterButton">
        <item name="android:background">@drawable/shutter_button_background</item>
    </style>

    <!-- Flip camera button theme -->
    <style name="SelfieFlipCameraButton">
        <item name="tint">?attr/colorOnPrimary</item>
        <item name="android:background">@drawable/flip_camera_button_background</item>
    </style>
</resources>