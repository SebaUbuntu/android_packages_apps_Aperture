<animated-vector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:width="75dp"
    android:height="75dp">
    <aapt:attr name="android:drawable">
        <vector
            android:name="vector"
            android:width="75dp"
            android:height="75dp"
            android:viewportWidth="24"
            android:viewportHeight="24">
            <path
                android:fillColor="@color/white"
                android:pathData="M 1 12 A 10 10 0 1 1 23 12 A 10 10 0 1 1 1 12" />
            <path
                android:name="center"
                android:fillColor="?colorSecondaryContainer"
                android:pathData="M 2 12 A 10 10 0 1 1 22 12 A 10 10 0 1 1 2 12" />
        </vector>
    </aapt:attr>
    <target android:name="center">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:duration="100"
                android:interpolator="@android:interpolator/fast_out_slow_in"
                android:propertyName="pathData"
                android:repeatCount="1"
                android:repeatMode="reverse"
                android:valueFrom="M 2 12 A 10 10 0 1 1 22 12 A 10 10 0 1 1 2 12"
                android:valueTo="M 5 12 A 4 4 0 1 1 19 12 A 4 4 0 1 1 5 12"
                android:valueType="pathType" />
        </aapt:attr>
    </target>
</animated-vector>
